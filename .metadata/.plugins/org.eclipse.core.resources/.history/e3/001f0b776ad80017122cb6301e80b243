package application.controller;



import application.Login.LoginManager;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.fxml.FXML;
import javafx.scene.control.Alert;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.MenuItem;

public class RootLayoutController {
	@FXML
	private Button logoutButton;
	
	private MenuItem menuItemLogout;
	@FXML
	private Label sessionLabel;

	// Exit the program
	public void handleExit(ActionEvent actionEvent) {
		System.exit(0);
	}

	// Help Menu button behavior
	public void handleHelp(ActionEvent actionEvent) {
		Alert alert = new Alert(Alert.AlertType.INFORMATION);
		alert.setTitle("Program Information");
		alert.setHeaderText("This is a sample JAVAFX application for SWTESTACADEMY!");
		alert.setContentText("You can search, delete, update, insert a new employee with this program.");
		alert.show();
	}

	public void initSessionID(final LoginManager loginManager, String sessionID) {
		sessionLabel.setText(sessionID);
		menuItemLogout.setOnAction(new EventHandler<ActionEvent>() {
			@Override
			public void handleLogout(ActionEvent event) {
				loginManager.logout();
			}
		});
	}
}
