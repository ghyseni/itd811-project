package application.controller;

import application.LoginManager;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.fxml.FXML;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.Alert;
import javafx.scene.control.Label;
import javafx.scene.control.MenuItem;
import javafx.stage.Stage;

public class RootLayoutController {
	@FXML
	private Stage stage;
	@FXML
	private Scene scene;
	@FXML
	private Parent parent;

	@FXML
	private MenuItem logoutMenuItem;
	@FXML
	private MenuItem exitMenuItem;
	@FXML
	private MenuItem newTicketMenuItem;

	@FXML
	private Label sessionLabel;

	public void initialize(stagr) {
		this.stage = stage;
		stage.setScene(scene);
		stage.setResizable(true);
	}

	// Help Menu button behavior
	public void handleHelp(ActionEvent actionEvent) {
		Alert alert = new Alert(Alert.AlertType.INFORMATION);
		alert.setTitle("Program Information");
		alert.setHeaderText("Trouble Ticket System!");
		alert.setContentText("You can search, delete, update, insert a new employee with this program.");
		alert.show();
	}

	public void initSessionID(final LoginManager loginManager, String sessionID) {
		System.out.println("sessionID:" + sessionID);
		logoutMenuItem.setOnAction(new EventHandler<ActionEvent>() {
			@Override
			public void handle(ActionEvent event) {
				loginManager.logout();
			}
		});
		exitMenuItem.setOnAction(new EventHandler<ActionEvent>() {
			@Override
			public void handle(ActionEvent event) {
				loginManager.logout();
				System.exit(0);
			}
		});
		newTicketMenuItem.setOnAction(new EventHandler<ActionEvent>() {
			@Override
			public void handle(ActionEvent event) {
				loginManager.showTicketView();
			}
		});
	}
}
